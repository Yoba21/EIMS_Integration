<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- EIMS Certificate Views -->
        <record id="view_eims_certificate_list" model="ir.ui.view">
            <field name="name">eims.certificate.list</field>
            <field name="model">eims.certificate</field>
            <field name="arch" type="xml">
                <list string="EIMS Certificates" decoration-success="is_active and not is_expired and not is_expiring_soon" 
                      decoration-warning="is_expiring_soon" decoration-danger="is_expired">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="is_active"/>
                    <field name="expiry_date"/>
                    <field name="days_to_expiry"/>
                    <field name="is_expired" invisible="1"/>
                    <field name="is_expiring_soon" invisible="1"/>
                    <field name="created_date"/>
                </list>
            </field>
        </record>

        <record id="view_eims_certificate_form" model="ir.ui.view">
            <field name="name">eims.certificate.form</field>
            <field name="model">eims.certificate</field>
            <field name="arch" type="xml">
                <form string="EIMS Certificate">
                    <header>
                        <button name="action_test_certificate" type="object" string="Test Certificate" 
                                class="btn-primary"/>
                        <button name="action_deactivate" type="object" string="Deactivate" 
                                class="btn-secondary"
                                invisible="not is_active"/>
                        <button name="action_activate" type="object" string="Activate" 
                                class="btn-primary"
                                invisible="is_active"/>
                        <field name="is_active" widget="statusbar" statusbar_visible="active"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_test_certificate" type="object" 
                                    class="oe_stat_button" icon="fa-certificate">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Test</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Certificate Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="pfx_filename" readonly="1"/>
                                <field name="created_date" readonly="1"/>
                                <field name="created_by" readonly="1"/>
                            </group>
                            <group>
                                <field name="expiry_date" readonly="1"/>
                                <field name="days_to_expiry" readonly="1"/>
                                <field name="is_expired" readonly="1"/>
                                <field name="is_expiring_soon" readonly="1"/>
                            </group>
                        </group>
                        <group string="Certificate Information">
                            <field name="pfx_file" filename="pfx_filename"/>
                            <field name="pfx_password" password="True"/>
                        </group>
                        <div class="alert alert-warning" invisible="not is_expired">
                            <strong>Warning:</strong> This certificate has expired!
                        </div>
                        <div class="alert alert-info" invisible="not is_expiring_soon">
                            <strong>Notice:</strong> This certificate expires in <field name="days_to_expiry"/> days.
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_eims_certificate_search" model="ir.ui.view">
            <field name="name">eims.certificate.search</field>
            <field name="model">eims.certificate</field>
            <field name="arch" type="xml">
                <search string="EIMS Certificates">
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="pfx_filename"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Expired" name="expired" domain="[('is_expired', '=', True)]"/>
                    <filter string="Expiring Soon" name="expiring_soon" domain="[('is_expiring_soon', '=', True)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Company" name="company" domain="[]" context="{'group_by': 'company_id'}"/>
                        <filter string="Status" name="status" domain="[]" context="{'group_by': 'is_active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- EIMS Certificate Actions -->
        <record id="action_eims_certificate" model="ir.actions.act_window">
            <field name="name">EIMS Certificates</field>
            <field name="res_model">eims.certificate</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_eims_certificate_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Upload your first EIMS certificate!
                </p>
                <p>
                    EIMS certificates are required for authenticating with the Ethiopian EIMS system.
                    Upload your PKCS#12 certificate file (.pfx or .p12) to enable invoice integration.
                </p>
            </field>
        </record>

    </data>
</odoo>
