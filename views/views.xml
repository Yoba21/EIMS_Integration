    <!-- Inherit the account.move form view to add EIMS fields -->
    <record id="view_move_form_eims_integration" model="ir.ui.view">
      <field name="name">account.move.form.eims.integration</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <notebook position="inside">
          <page string="EIMS Integration">
            <group>
              <field name="eims_status" readonly="1"/>
              <field name="eims_irn" readonly="1"/>
              <field name="eims_error_message" readonly="1" widget="text"/>
            </group>
          </page>
        </notebook>
      </field>
