<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Step 1: Basic Information -->
        <record id="view_eims_configuration_wizard_step1" model="ir.ui.view">
            <field name="name">eims.configuration.wizard.step1</field>
            <field name="model">eims.configuration.wizard</field>
            <field name="arch" type="xml">
                <form string="EIMS Configuration Wizard - Step 1">
                    <group>
                        <field name="company_id"/>
                    </group>
                    <footer>
                        <button name="action_next_step" type="object" string="Next" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Step 2: EIMS Credentials -->
        <record id="view_eims_configuration_wizard_step2" model="ir.ui.view">
            <field name="name">eims.configuration.wizard.step2</field>
            <field name="model">eims.configuration.wizard</field>
            <field name="arch" type="xml">
                <form string="EIMS Configuration Wizard - Step 2">
                    <group>
                        <field name="eims_client_id"/>
                        <field name="eims_client_secret"/>
                        <field name="eims_api_key"/>
                        <field name="eims_tin"/>
                    </group>
                    <footer>
                        <button name="action_previous_step" type="object" string="Previous" class="btn-secondary"/>
                        <button name="action_next_step" type="object" string="Next" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Step 3: API Endpoints -->
        <record id="view_eims_configuration_wizard_step3" model="ir.ui.view">
            <field name="name">eims.configuration.wizard.step3</field>
            <field name="model">eims.configuration.wizard</field>
            <field name="arch" type="xml">
                <form string="EIMS Configuration Wizard - Step 3">
                    <group>
                        <field name="eims_login_url"/>
                        <field name="eims_invoice_submit_url"/>
                    </group>
                    <footer>
                        <button name="action_previous_step" type="object" string="Previous" class="btn-secondary"/>
                        <button name="action_next_step" type="object" string="Next" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Step 4: Certificate Information -->
        <record id="view_eims_configuration_wizard_step4" model="ir.ui.view">
            <field name="name">eims.configuration.wizard.step4</field>
            <field name="model">eims.configuration.wizard</field>
            <field name="arch" type="xml">
                <form string="EIMS Configuration Wizard - Step 4">
                    <group>
                        <field name="certificate_name"/>
                        <field name="pfx_file" filename="pfx_filename"/>
                        <field name="pfx_password" password="True"/>
                    </group>
                    <footer>
                        <button name="action_previous_step" type="object" string="Previous" class="btn-secondary"/>
                        <button name="action_next_step" type="object" string="Next" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Step 5: Settings -->
        <record id="view_eims_configuration_wizard_step5" model="ir.ui.view">
            <field name="name">eims.configuration.wizard.step5</field>
            <field name="model">eims.configuration.wizard</field>
            <field name="arch" type="xml">
                <form string="EIMS Configuration Wizard - Step 5">
                    <group>
                        <field name="eims_timeout"/>
                        <field name="eims_verify_ssl"/>
                        <field name="eims_auto_register"/>
                        <field name="eims_block_on_error"/>
                        <field name="validation_results" readonly="1" widget="text"/>
                    </group>
                    <footer>
                        <button name="action_previous_step" type="object" string="Previous" class="btn-secondary"/>
                        <button name="action_save_configuration" type="object" string="Save Configuration" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard Action -->
        <record id="action_eims_configuration_wizard" model="ir.actions.act_window">
            <field name="name">EIMS Configuration Wizard</field>
            <field name="res_model">eims.configuration.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_eims_configuration_wizard_step1"/>
            <field name="target">new</field>
        </record>


    </data>
</odoo>
