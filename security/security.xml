<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- EIMS Security Groups -->
        <record id="group_eims_user" model="res.groups">
            <field name="name">EIMS User</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">Can view EIMS data and logs</field>
        </record>

        <record id="group_eims_officer" model="res.groups">
            <field name="name">EIMS Officer</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_eims_user'))]"/>
            <field name="comment">Can manage EIMS certificates, master data, and retry failed integrations</field>
        </record>

        <record id="group_eims_manager" model="res.groups">
            <field name="name">EIMS Manager</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="implied_ids" eval="[(4, ref('group_eims_officer'))]"/>
            <field name="comment">Full access to EIMS configuration and system settings</field>
        </record>

        <!-- Record Rules for Multi-Company Support -->
        <record id="eims_certificate_company_rule" model="ir.rule">
            <field name="name">EIMS Certificate: Multi-Company</field>
            <field name="model_id" ref="model_eims_certificate"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="eims_log_company_rule" model="ir.rule">
            <field name="name">EIMS Log: Multi-Company</field>
            <field name="model_id" ref="model_eims_log"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="eims_master_company_rule" model="ir.rule">
            <field name="name">EIMS Master: Multi-Company</field>
            <field name="model_id" ref="model_eims_master"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Additional Security Rules -->
        <record id="eims_certificate_user_rule" model="ir.rule">
            <field name="name">EIMS Certificate: User Access</field>
            <field name="model_id" ref="model_eims_certificate"/>
            <field name="domain_force">[('is_active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_eims_user'))]"/>
        </record>

        <record id="eims_log_user_rule" model="ir.rule">
            <field name="name">EIMS Log: User Access</field>
            <field name="model_id" ref="model_eims_log"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_eims_user'))]"/>
        </record>

        <record id="eims_master_user_rule" model="ir.rule">
            <field name="name">EIMS Master: User Access</field>
            <field name="model_id" ref="model_eims_master"/>
            <field name="domain_force">[('is_active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_eims_user'))]"/>
        </record>

    </data>
</odoo>

